                        <td class="text-center">
                          {{record['id']}}
                        </td>
                        <td class="text-center">
                          <a href="{{record['url']}}">{{record['url']}}</a>
                        </td>
                        <td class="text-center">
                          <span data-toggle="tooltip" data-placement="top" title="{{record['description']}}">{{record['vulnerability_name']}}
                        </td>
                        <td class="text-center">
                          {{record['severity']}}
                        </td>
                        <td class="text-center">
                          {{record['confidence']}}
                        </td>
                        <td class="text-center">
                          {{record['timestamp']}}
                        </td>
                      </tr>
                      {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
